{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalDotEnv": [".env"],
	"globalEnv": [
		"DUMMY_SEEDER_ADMIN_PASSWORD",
		"JWT_SECRET",
		"ENV",
		"DATABASE_URL",
		"COOKIE_NAME",
		"NEXT_URL",
		"NEXT_PUBLIC_GOOGLE_CLIENT_ID",
		"NEXT_PUBLIC_GOOGLE_CLIENT_SECRET"
	],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"dependsOn": ["^dev"],
			"cache": false,
			"persistent": true,
			"dotEnv": [
				".env",
				".env.local",
				".env.production",
				".env.local.production",
				".env.staging"
			]
		},
		"db:generate": {
			"dependsOn": ["^db:generate"],
			"cache": false,
			"dotEnv": [".env", ".env.production"]
		},
		"db:migrate": {
			"dependsOn": ["^db:generate"],
			"cache": false,
			"dotEnv": [".env", ".env.production"]
		}
	}
}
