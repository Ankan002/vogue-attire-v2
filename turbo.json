{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalDotEnv": [".env"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"dependsOn": ["^dev"],
			"cache": false,
			"persistent": true,
			"dotEnv": [
				".env",
				".env.local",
				".env.production",
				".env.local.production",
				".env.staging"
			]
		}
	}
}
